@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="breadcrumb-section another-breadcrumb-section wf-section">
    <div class="container w-container">
        <div class="breadcrumb-wrapper another-breadcrumb-section">
            <div class="breadcrumb-wrapper another-breadcrumb-section">
                <div class="breadcrumb-content another-breadcrumb-section">
                    <div class="breadcrumb-sub-heading another-breadcrumb-section">Login <br />
                    </div>
                    <h1 class="breadcrumb-main-heading another-breadcrumb-section">
                        <span class="breadcrumb-span-text another-breadcrumb-section">Login Now!</span>
                    </h1>
                    <p class="breadcrumb-details-content another-details-content">Huge number of propreties availabe
                        here for buy and sell also you can find here co-living property</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="blank-space-section wf-section"></div>

<div class="login-section wf-section">
    <div class="container w-container">
        <div class="login-wrapper">
            <div class="login-left-side">
                <div class="login-top">
                    <h2 class="login-title">Login to HomeQuest <span class="section-color-shape">.</span></h2>
                    <p class="login-details">Huge number of propreties availabe here for buy, sell and Rent. Also you
                        find here co-living property, lots opportunity you have to choose here and enjoy huge discount
                        you can get. <br />
                    </p>
                </div>
                <div class="login-form-block">
                    <div class="form-block w-form">
                        @* Login Form *@
                        <form id="account" method="post" class="login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <input asp-for="Input.Email" type="email" class="form-field width-full login-form w-input" maxlength="256"
                                name="email" data-name="Name" placeholder="Email:name@example.com" id="email" aria-required="true" />
                            <input asp-for="Input.Password" type="password" class="form-field width-full login-form w-input" maxlength="256"
                                name="Password" data-name="Password" placeholder="Password" id="Password" aria-required="true" />
                            <div class="forget-password-block">
                                <label asp-for="Input.RememberMe" class="w-checkbox form-checkbox">
                                    <input asp-for="Input.RememberMe" type="checkbox" name="Checkbox" id="Checkbox" data-name="Checkbox"
                                        required="" class="w-checkbox-input checkbox" />
                                    <span class="checkbox-label w-form-label" for="Checkbox">Remember Me</span>
                                </label>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="forget-password">Forgot Password</a>
                            </div>
                            <div class="button-block register-block">
                                <input type="submit" value="Login" data-wait="Please wait..."
                                    class="button login-button w-button" />
                                <div class="already-account">New here?</div>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="register-link register-block">Register</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="login-right-side">
                <img src="https://assets.website-files.com/6224513e7396e88bd7269d7b/623be93102def05b04fea5cd_image2.png"
                    loading="lazy" alt="Register Image" class="login-image" />
            </div>
        </div>
    </div>
</div>




