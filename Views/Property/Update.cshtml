@using Microsoft.AspNetCore.Identity
@model HomeQuest.Models.Property
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Update";
}

<div class="breadcrumb-section another-breadcrumb-section wf-section">
    <div class="container w-container">
        <div class="breadcrumb-wrapper another-breadcrumb-section">
            <div class="breadcrumb-content another-breadcrumb-section">
                <div class="breadcrumb-sub-heading another-breadcrumb-section">

                    <br />
                </div>
                <h1 class="breadcrumb-main-heading another-breadcrumb-section">
                    <span class="breadcrumb-span-text another-breadcrumb-section">Update The Property</span>
                </h1>
                <p class="breadcrumb-details-content another-details-content">Huge number of propreties availabe here
                    for buy and sell also you can find here co-living property</p>
            </div>
        </div>
    </div>
</div>
<div class="blank-space-section wf-section"></div>

 <div class="container mt-3">
        <div class="d-flex justify-content-end">
        <a class="mx-3 button " asp-controller="Property" asp-action="Detail" asp-route-id="@Model.Id"
            style=" margin-Top:5px; background-color:#494949">Go Back</a>
        </div>
</div>

<div class="add-properties wf-section">
    <div class="container w-container">
        <div class="add-properties-wrapper">
            <div class="add-properties-form-wrapper w-form">
                <div id="map"></div>
                <form asp-controller="Property" asp-action="Update" enctype="multipart/form-data" method="post"
                    class="add-properties-form">
                    <div class="form-wrapper">
                        <div class="single-form width-50">
                            <input asp-for="AgentId"  value="@UserManager.GetUserId(User)" hidden>
                            <input asp-for="Id" type="text" class="properties-form-field w-input" id="id" required
                                hidden value="@Model.Id" />

                            <label asp-for="Title" class="properties-label">Property Title</label>
                            <input asp-for="Title" type="text" class="properties-form-field w-input" 
                                placeholder="Property Title" id="Title" value="@Model.Title" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="Title"></span>

                            <label asp-for="Price" class="properties-label">Price</label>
                            <input asp-for="Price" type="number" class="properties-form-field w-input"
                                placeholder="Price" id="Price" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="Price"></span>

                            <label asp-for="Address" for="Address-line" class="properties-label">Address</label>
                            <input asp-for="Address" type="text" class="properties-form-field w-input"
                                placeholder="Address" id="location-input" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="Address" value="@Model.Address"></span>

                            <label asp-for="PostalCode" for="Postal-Code" class="properties-label">Postal Code</label>
                            <input asp-for="PostalCode" type="text" class="properties-form-field w-input"
                                placeholder="Postal Code" id="postal_code-input" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="PostalCode" value="@Model.PostalCode"></span>
                        </div>

                        <div class="single-form width-50">
                            <label asp-for="Description" for="Text-Field" class="properties-label">Property
                                Description</label>
                            <textarea asp-for="Description" placeholder="Write Your Description Here" id="Text-Field"
                                class="properties-form-field textarea w-input" style="height: 390px;"></textarea>
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="Description"></span>
                        </div>

                        <div class="single-form width-50">
                            <label asp-for="Type" for="property-type" class="properties-label">Property Type <br />
                            </label>
                            <select asp-for="Type" class="properties-form-field w-select">
                                <option value="0">House</option>
                                <option value="1">Apartment</option>
                                <option value="2">Duplex</option>
                                <option value="3">TownHouse</option>
                                <option value="4">Condo</option>
                            </select>
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="Type"></span>
                        </div>
                        <div class="single-form width-50">
                            <label asp-for="Status" for="property-status" class="properties-label">Property
                                Status</label>
                            <select asp-for="Status" id="property-status" class="properties-form-field w-select">
                                <option value="0">Pending</option>
                                <option value="1">Sold</option>
                                <option value="2">For Sale</option>
                            </select>
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="Type"></span>
                        </div>
                        <div class="single-form width-50">
                            <label asp-for="Floors" for="floors" class="properties-label">Floors</label>
                            <input asp-for="Floors" type="number" class="properties-form-field w-input"
                                placeholder="Floors" id="floors" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="Floors"></span>
                        </div>
                        <div class="single-form width-50">
                            <label asp-for="FloorArea" for="floor-area" class="properties-label">Floor Area</label>
                            <input asp-for="FloorArea" type="number" class="properties-form-field w-input" 
                                placeholder="Floor Area (Sqft)" id="floor-area" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="FloorArea"></span>
                        </div>
                        <div class="single-form width-50">
                            <label asp-for="LotArea" for="lot-area" class="properties-label">Lot Area</label>
                            <input asp-for="LotArea" type="number" class="properties-form-field w-input"
                                placeholder="Lot Area (Sqft)" id="lot-area" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="LotArea"></span>
                        </div>
                        <div class="single-form width-50">
                            <label asp-for="BedroomCount" for="Number-of-Bedroom-2" class="properties-label">Number of
                                Bedroom</label>
                            <input asp-for="BedroomCount" type="text" class="properties-form-field w-input" placeholder="Number of Bedroom" id="Number-of-Bedroom-2" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="BedroomCount"></span>
                        </div>
                        <div class="single-form width-50">
                            <label asp-for="BathroomCount" for="Number-of-Bathroom" class="properties-label">Number of
                                Bathroom</label>
                            <input asp-for="BathroomCount" type="text" class="properties-form-field w-input" placeholder="Number of Bathroom" id="Number-of-Bathroom" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="BathroomCount"></span>
                        </div>
                        <div class="single-form width-50">
                            <label asp-for="GarageCont" for="Number-of-Garage" class="properties-label">Number of
                                Garage</label>
                            <input asp-for="GarageCont" type="text" class="properties-form-field w-input" 
                                placeholder="Number of Garage" id="Number-of-Garage" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="GarageCont"></span>
                        </div>
                        <div class="single-form width-50">
                            <label asp-for="YearBuilt" for="year-built" class="properties-label">Year Built</label>
                            <input asp-for="YearBuilt" type="date" class="properties-form-field w-input"
                                placeholder="Year Built" id="year-built" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="YearBuilt"></span>
                        </div>
                        <div class="single-form width-50">
                            <label asp-for="CreatedAt" for="year-built" class="properties-label">CreatedAt</label>
                            <input asp-for="CreatedAt" type="date" class="properties-form-field w-input"
                                placeholder="Created At" id="created-at" required />
                            <span class="section-color-shape d-flex justify-content-end"
                                asp-validation-for="CreatedAt"></span>
                        </div>

                    </div>  
                        <input type="submit" value="Save Changes" data-wait="Please wait..."
                        class="button agency-creat-button add-property-button w-button mt-5" />
                </form>
                <form asp-controller="Property" asp-action="Delete" method="post" class="add-properties-form"
                    enctype="multipart/form-data">
                    <input hidden asp-for="Id"></input>
                    <button class="button agency-creat-buttonw-button mt-5" style="background-color: #ff6500;">Delete Property</button>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
<script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAR1JWn8JXkS7IEZsilDAml6D3rEyyiOAQ&callback=initMap&libraries=places&v=weekly"
      defer
    ></script>
   
    <script src="~/js/site.js" asp-append-version="true"></script> 