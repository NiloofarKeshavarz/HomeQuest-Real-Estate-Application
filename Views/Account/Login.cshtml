@{
    ViewData["Title"] = "Login";
}

<div class="breadcrumb-section another-breadcrumb-section wf-section">
    <div class="container w-container">
        <div class="breadcrumb-wrapper another-breadcrumb-section">
            <div class="breadcrumb-content another-breadcrumb-section">
                <div class="breadcrumb-sub-heading another-breadcrumb-section">Login <br />
                </div>
                <h1 class="breadcrumb-main-heading another-breadcrumb-section">
                    <span class="breadcrumb-span-text another-breadcrumb-section">Login Now!</span>
                </h1>
                <p class="breadcrumb-details-content another-details-content">Huge number of propreties availabe here
                    for buy and sell also you can find here co-living property</p>
            </div>
        </div>
    </div>
</div>
<div class="blank-space-section wf-section"></div>

<div class="login-section wf-section">
    <div class="container w-container">
        <div class="login-wrapper">
            <div class="login-left-side">
                <div class="login-top">
                    <h2 class="login-title">Login to HomeQuest <span class="section-color-shape">.</span></h2>
                    <p class="login-details">Huge number of propreties availabe here for buy, sell and Rent. Also you
                        find here co-living property, lots opportunity you have to choose here and enjoy huge discount
                        you can get. <br />
                    </p>
                </div>
                <div class="login-form-block">
                    <div class="form-block w-form">
                        @* Login Form *@
                        <form asp-controller="Account" asp-action="Register" method="post" class="login-form">
                            <input type="text" class="form-field width-full login-form w-input" maxlength="256"
                                name="name" data-name="Name" placeholder="Username" id="name" required="" />
                            <input type="password" class="form-field width-full login-form w-input" maxlength="256"
                                name="Password" data-name="Password" placeholder="Password" id="Password" required="" />
                            <div class="forget-password-block">
                                <label class="w-checkbox form-checkbox">
                                    <input type="checkbox" name="Checkbox" id="Checkbox" data-name="Checkbox"
                                        required="" class="w-checkbox-input checkbox" />
                                    <span class="checkbox-label w-form-label" for="Checkbox">Remember Me</span>
                                </label>
                                <a href="#" class="forget-password">Forgot Password</a>
                            </div>
                            <div class="button-block">
                                <input type="submit" value="Login" data-wait="Please wait..."
                                    class="button login-button w-button" />
                                <a href="/register" class="register-link">Register</a>
                            </div>
                        </form>
                        <div class="w-form-done">
                            <div>Thank you! Your submission has been received!</div>
                        </div>
                        <div class="w-form-fail">
                            <div>Oops! Something went wrong while submitting the form.</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="login-right-side">
                <img src="https://assets.website-files.com/6224513e7396e88bd7269d7b/623be93102def05b04fea5cd_image2.png"
                    loading="lazy" alt="Register Image" class="login-image" />
            </div>
        </div>
    </div>
</div>