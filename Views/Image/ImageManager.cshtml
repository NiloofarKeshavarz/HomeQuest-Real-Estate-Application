@model List<HomeQuest.Models.Image>    // a list of image model entities to display or create

@{
    ViewData["Title"] = "imageUploadDownload";
}



<h2>welcome to image upload/download</h2>

<h3>Image Manager for the property with id @ViewBag.currentPropertyId</h3>

<form asp-controller="Image" asp-action="UploadFiles" method="Post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="file" name="files" multiple />
        <input type="text" name="propertyId" value=@ViewBag.currentPropertyId></input>
    </div>
    <button type="submit">Upload Files</button>
</form>



<h3>DB saved Files</h3>
    <table>
        <tbody>
            @if (ViewBag.urlList != null){
                      @foreach (var url in ViewBag.urlList)
            {
                <tr>
                    <img src="@url"/>
                    <form asp-controller="Image" asp-action="DeleteImage" method="Post" enctype="multipart/form-data">
                            <input type="text" name="urlToDelete" value=@url></input>
                            <button type="submit">Delete</button>
                    </form>

                    <form asp-controller="Image" asp-action="SetAsPrimary" method="post" enctype="multipart/form-data">
                            <input type="text" name="SetAsPrimary" value=@url></input>
                            <button type="submit">SetAsPrimary</button>
                    </form>


                    

                </tr>
            }
            }else{
                <h1>View bag is null</h1>
            }
      
        </tbody>
    </table>

